{
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": ["*.sql"],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
